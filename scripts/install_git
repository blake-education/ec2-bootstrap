mkdir -p $HOME/src
cd $HOME/src

TAR=$HOME/src/git.tar.gz

VERSION=1.7.11.3

if [[ ! git --version | grep -q $VERSION ]]; then
  curl -L http://git-core.googlecode.com/files/git-$VERSION.tar.gz > $TAR

  mkdir git
  tar --strip-components 1 -C git -zxf $TAR

  cd git
  ./configure --without-tcltk --without-python
  make install
fi

# vim: ft=sh
